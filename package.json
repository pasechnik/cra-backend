{
  "name": "backend-api",
  "version": "0.0.1",
  "description": "Koa2 API server",
  "main": "dist/bin/server.js",
  "scripts": {
    "clean": "rimraf dist",
    "compile": "better-npm-run compile",
    "start": "better-npm-run start",
    "start:dev": "better-npm-run start:dev",
    "start:prod": "better-npm-run start:prod",
    "dev": "better-npm-run start:dev",
    "deploy": "better-npm-run deploy",
    "deploy:prod": "better-npm-run deploy",
    "deploy:dev": "better-npm-run deploy:dev",
    "deploy:watch": "babel src --out-dir dist --watch",
    "test:ci": "better-npm-run test:ci",
    "test:dev": "npm run test -- --watch",
    "test:coverage": "better-npm-run test:coverage",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint --fix src/**/*.js",
    "fix:other": "yarn prettier --write",
    "fix:js": "yarn test:js --fix",
    "fix": "yarn fix:js && yarn fix:other",
    "prettier": "prettier \"**/*.{json,md,scss,yaml,yml}\"",
    "prettier:js": "prettier \"**/*.js\"",
    "prettier:fix": "prettier \"**/*.js\" --write",
    "test:other": "yarn prettier --list-different",
    "test:js": "eslint --ignore-path .gitignore --ignore-path .prettierignore \"**/*.{js,jsx}\"",
    "test": "yarn test:other && yarn test:js && yarn test:ci"
  },
  "lint-staged": {
    "*.{js,jsx}": [
      "prettier --write && eslint --fix",
      "git add"
    ],
    "*.{json,md,scss,yaml,yml}": [
      "prettier --write",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "betterScripts": {
    "compile": {
      "command": "babel src --out-dir dist",
      "env": {
        "DEBUG": "app:*"
      }
    },
    "start": {
      "command": "node dist/bin/start.js",
      "env": {
        "DEBUG": "app:*"
      }
    },
    "start:dev": {
      "command": "nodemon src/index.js",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*",
        "CASSANDRA": "127.0.0.1"
      }
    },
    "start:prod": {
      "command": "node dist/bin/start.js",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    },
    "deploy": {
      "command": "npm run clean && npm run compile",
      "env": {
        "DEBUG": "app:*"
      }
    },
    "deploy:dev": {
      "command": "npm run deploy",
      "env": {
        "NODE_ENV": "development",
        "DEBUG": "app:*"
      }
    },
    "deploy:prod": {
      "command": "npm run deploy",
      "env": {
        "NODE_ENV": "production",
        "DEBUG": "app:*"
      }
    },
    "test:ci": {
      "command": "jest",
      "env": {
        "CI": true,
        "DEBUG": "app:*"
      }
    },
    "test": {
      "command": "jest",
      "env": {
        "DEBUG": "test:*"
      }
    },
    "test:coverage": {
      "command": "jest --coverage",
      "env": {
        "DEBUG": "test:*"
      }
    }
  },
  "keywords": [
    "koa2-api-boilerplate",
    "api",
    "koa",
    "koa2",
    "boilerplate",
    "es6",
    "passportjs"
  ],
  "author": "Vladimir Pasechnik <vladimir.pasechnik@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://gitlab.com/blackit/cra-backend/"
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.3",
    "babel-jest": "^23.0.1",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-stage-0": "^6.24.1",
    "babel-preset-stage-2": "^6.24.1",
    "babel-register": "^6.26.0",
    "bcrypt-nodejs": "^0.0.3",
    "better-npm-run": "^0.1.0",
    "cassandra-driver": "^3.5.0",
    "debug": "^3.1.0",
    "es6-promisify": "^6.0.0",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-config-standard": "^11.0.0",
    "eslint-plugin-babel": "^5.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-node": "^6.0.1",
    "eslint-plugin-promise": "^3.8.0",
    "eslint-plugin-standard": "^3.1.0",
    "faker": "^4.1.0",
    "glob": "^7.1.2",
    "jest": "^21.2.1",
    "json-promise": "^1.1.8",
    "jsonwebtoken": "^8.2.2",
    "koa": "^2.5.1",
    "koa-bodyparser": "^4.2.1",
    "koa-convert": "^1.2.0",
    "koa-cors": "^0.0.16",
    "koa-logger": "^3.2.0",
    "koa-mount": "^3.0.0",
    "koa-passport": "^4.1.0",
    "koa-router": "^7.4.0",
    "koa-sslify": "^2.1.2",
    "lodash": "^4.17.11",
    "nodemon": "^1.17.5",
    "passport-local": "^1.0.0",
    "request": "^2.87.0",
    "request-promise-native": "^1.0.5",
    "rimraf": "^2.6.2",
    "sanitize-filename": "^1.6.1",
    "socket.io": "^2.1.1",
    "supertest": "^3.1.0",
    "the-utils": "^0.5.7",
    "uuid": "^3.2.1"
  },
  "devDependencies": {
    "eslint": "4.19.1",
    "eslint-config-prettier": "6.7.0",
    "eslint-plugin-prettier": "3.1.1",
    "husky": "3.1.0",
    "lint-staged": "9.5.0",
    "prettier": "1.19.1"
  }
}
